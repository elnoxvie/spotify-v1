<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <com.elnware.spotifystreamer.view.MyRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_outer_padding"
        android:layout_marginTop="@dimen/list_outer_padding"
        android:scrollbars="vertical"/>

    <include layout="@layout/empty_view_container"/>

    <include layout="@layout/progress_container"/>
</FrameLayout>

